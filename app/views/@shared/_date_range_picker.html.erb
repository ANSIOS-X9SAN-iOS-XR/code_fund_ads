<li class="list-inline-item">
  <%= form_tag nil,
        data: { controller: "dashboard-date-range", target: "dashboard-date-range.form" },
        method: :get, autocomplete: "off",
        style: "width: 270px;" do%>
    <div class="w-auto input-group input-group-sm opacity-90">
      <div class="input-group-prepend">
        <span class="input-group-text border-0 text-primary opacity-80 btn-soft-primary">
          <span class="fas fa-calendar"></span>
        </span>
      </div>
      <input type="text"
        name="date_range"
        class="js-range-datepicker form-control text-primary"
        style="border: 2px solid #eaf0fa;"
        data-target="dashboard-date-range.datePicker"
        data-start-date="<%= @start_date.to_s("mm/dd/yyyy") %>"
        data-end-date="<%= @end_date.to_s("mm/dd/yyyy") %>" />
    </div>
  <% end %>
</li>
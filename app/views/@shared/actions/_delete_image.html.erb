<% if authorized_user.can_destroy_image?(image) %>
  <li class="list-inline-item">
    <%= link_to image_path(imageable.to_gid_param, image),
          method: :delete, class: "btn btn-sm btn-danger transition-3d-hover text-white",
          data: { confirm: I18n.t("images.destroy.confirm") } do %>
      <span class="fa fa-trash font-size-13"></span>
    <% end %>
  </li>
<% end %>
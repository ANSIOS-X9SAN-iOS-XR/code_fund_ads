<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/generic",
        label: "Earnings", link: user_invoices_path(current_user), class: "active" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Publisher", "Earnings",
    subtitle: "How much are you making each month?",
    icon: "fas fa-file-invoice-dollar" %>
<% end %>


<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <div class="bg-white p-4">
      <%= render "/invoices/table", invoices: @invoices, pagy: @pagy %>
    </div>
  </div>
</main>